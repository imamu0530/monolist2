<h3 class="text-center">Wantランキング</h3>
<div class="container">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <table class="table table-bordered">
        <tr><th class="info text-center">ランキング</th><th class="info text-center">商品画像</th></tr>
    <% @items.each.with_index(1) do |item,number| %>
    
        <tr>
            <td>ランキング<%= number %>位</td>
            <td>
              <div class="item-box">
                <div class="image">
                  <div class="img-wrap">
                    <% if item.large_image.present? %>
                    <%= image_tag(item.large_image , alt: item.title) %>
                    <% else %>
                    <%= image_tag("no-image.png" , alt: item.title) %>
                    <% end %>
                  </div>
                </div>
              </div>
            </td>
        </tr>
    <% end %>


    </table>
    </div>
    </div>
</div>