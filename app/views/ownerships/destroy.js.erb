<% if params[:type] == "Have" %>
  $("[item_code='have-<%= @item.item_code %>'], .have-<%= @item.id %>").replaceWith("<%= escape_javascript(render('items/have' , item: @item)) %>");
<% else %>
  $("[item_code='want-<%= @item.item_code %>'], .want-<%= @item.id %>").replaceWith("<%= escape_javascript(render('items/want' , item: @item)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');